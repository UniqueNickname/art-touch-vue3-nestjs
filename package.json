{
  "name": "art-touch",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "format": "prettier --write \"apps/{backend,client}/{src,test,server}/**/*.{ts,vue}\" ",
    "lint:scripts": "eslint \"apps/{backend,client}/{src,test,server}/**/*.{ts,vue}\" --fix",
    "build": "lerna run build --stream",
    "start:prod": "lerna run start:prod --stream",
    "start:dev": "lerna run start:dev --stream",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "commit": "git cz"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@commitlint/cz-commitlint": "^16.0.0",
    "@commitlint/format": "^16.0.0",
    "@commitlint/types": "^16.0.0",
    "@nestjs/swagger": "^5.1.5",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "commitizen": "^4.2.4",
    "conventional-changelog-conventionalcommits": "^4.6.3",
    "dotenv": "^10.0.0",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.2.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.7",
    "prettier": "^2.5.1",
    "swagger-ui-express": "^4.3.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "vue-eslint-parser": "^8.0.1"
  }
}
